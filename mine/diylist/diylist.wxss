/* pages/mine/diylist/diylist.wxss */
page{
    border-top:1px solid #EDEDED;
    background-color: #FBFBFB;
}
.hc-msgBox{
    margin: 10px 20px;
    display: flex;
    flex-direction: column;
    text-align:left;
    justify-content: center;
}
.hc-time{
    font-size:14px;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:30px;
}
.hc-img {
    box-shadow:0px 0px 13px 0px rgba(0,0,0, 0.16);
    border-radius:8px;
    overflow: hidden;
    position: relative
}
.hc-img>image:nth-child(2){
    width: 100%;
    height: 176px;
    display: block;
}
.hc-img-edit{
    position: absolute;
    top: 20px;
    right: 0;
    width: 50px;
    height: 20px;
}
.hc-delete image{
    width: 15px;
    height: 17px;
    margin-top:10px;
}
.hc-detail{
    position: absolute;
    display: block;
    height: 45px;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.3);
    border-radius: 0px 0px 8px 8px;
    color: #fff;
    font-size: 13px;
    font-weight: 400;
    font-family: PingFang-SC;
    padding: 5px 14px;
}
.hc-title{
    font-size:16px;
    font-weight:bold;
}

.hc-delete{
    width: 6%;
    float: right;
    text-align: center
}
.empty{
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 100px;
}
.empty image{
    width: 110px;
    height: 110px;
}
.empty view{
    margin-top: 20px;
    text-align: center;
}