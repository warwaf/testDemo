/* pages/mine/payresult/payresult.wxss */
page{
    background:rgba(249,250,252,1);
}
.hc-box{
    margin: 20px auto;
    width: 345px;
    height: 288px;
    display: flex;
    flex-direction: column;
    text-align: center;
    border-radius: 4px;
    position: relative
}
.hc-box image{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top:0;
}
.hc-money{
    font-size:46px;
    font-weight:600;
    color:rgba(48,2,2,1);
    line-height:40px;
    margin: 50px auto 30px;
    z-index: 1111;
}
.hc-num{
    font-size:15px;
    font-weight:400;
    color:rgba(34,34,34,1);
    line-height:21px;
    z-index: 1111;
    margin-bottom: 50px;
}
.hc-btn{
    width:285px;
    height:44px;
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 13px 0px rgba(255,226,39,0.71);
    border-radius:25px;
    text-align: center;
    line-height: 44px;
    margin: 20px auto;
    z-index: 1111;
}