/* pages/mine/confirmorder/confirmorder.wxss */
@import "../../pages/album/diy/diy.wxss"

.hc-orderTop{
    margin: 10px 10px ;
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-align:left;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 10px 0px rgba(202,217,232,0.35);
    border-radius:4px;
    overflow: hidden;
}
.hc-orderTopBox{
    display: flex;
    justify-content: center;
    flex-direction: row;
    text-align: left;
    margin: 20px 10px 10px 10px;
    
}
.hc-orderLeft{
    width: 90%;
}
.hc-ordername{
    height:22px;
    font-size:16px;
    font-weight:bold;
    color:rgba(34,34,34,1);
    line-height:22px;
}
.hc-address{
    height:18px;
    font-size:13px;
    font-weight:500;
    color:rgba(153,153,153,1);
    line-height:18px;
    margin-top: 10px;
}
.hc-orderRight{
    width: 10%;
    text-align: center;
}
.hc-orderRight image{
    width: 9px;
    height: 15px;
    margin-top: 17.5px;
}
.hc-go,.hc-go image{
    width: 100%;
    height: 10px;
}
.hc-payfor{
    margin: 10px 10px 0 10px;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 10px 0px rgba(202,217,232,0.35);
    border-radius:4px;
   
}
.hc-payforTitle{
    height:25px;
    font-size:15px;
    font-weight:600;
    color:rgba(34,34,34,1);
    line-height:21px;
    padding: 15px 10px;
}
.hc-priceBox{
    display: flex;
    flex-direction: row;
    padding: 15px 0;
    border-top:1px solid #FFF2F2F2;
}
.hc-priceLeft{
    float: left;
    display: inline-block;
    width: 30%;
    height:20px;
    font-size:14px;
    font-weight:500;
    color:rgba(34,34,34,1);
    line-height:20px;
    text-indent: 10px;
}
.hc-priceRight{
    float: right;
    display: inline-block;
    width: 68%;
    text-align: right;
    height:20px;
    font-size:14px;
    font-weight:500;
    color:rgba(153,153,153,1);
    line-height:20px;
}
.hc-orderBottom{
    width: 100%;
    height:64px;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 7px 0px rgba(126,151,168,0.24);
    position: fixed;
    bottom: 0;
    left: 0;
}
.hc-orderMoney{
    width: 45%;
    display: inline-block;
    line-height: 64px;
    text-indent: 20px;
}
.hc-btnBox{
    width: 55%;
    display: flex;
    justify-content: center;
    flex-direction: row;
    text-align: center;
    float: right
}
.hc-btn{
    width: 192px;
    height: 40px;
    line-height: 40px;
    margin-top: 12px;
    border-radius: 120px;
    overflow: hidden
}
.hc-btn >view{
    width: 96px;
    height: 40px;
    line-height: 40px;
    display: inline-block;
    font-weight:400;
    font-size:15px;
    color:rgba(42,33,29,1);
    text-align: center
    
}
.hc-btnSave{
    background:rgba(255,252,213,1);
}
.hc-btnPay{
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
}
.hc-orderWord{
    font-size:14px;
    font-weight:500;
    color:rgba(34,34,34,1);
}
.hc-money{
    font-size:29px;
    font-weight:normal;
    color:rgba(255,156,0,1);
}
.hc-zero{
    font-size:14.5px;
    font-weight:normal;
    color:rgba(255,156,0,1);
}