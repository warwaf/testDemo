/* pages/mine/confirmorder/selectaddress/selectaddress.wxss */
page{
    background:rgba(255,255,255,1);
}
.hc-seelctBox{
    border-top:1px solid #EDEDED;
}
.hc-addressBox{
    margin: 10px 10px;
    border-bottom: 1px solid #F2F2F2;
    display: flex;
    flex-direction: row;
    justify-content: center;
    text-align: center
}
.hc-select{
    width: 15%;
    height: 55px;
    line-height: 55px;
    text-align: center;
    display: inline-block;
    color: rgba(255,182,0,1);
    font-weight: 500;
    font-size:14px;
}
.hc-select image{
    width: 22px;
    height: 22px;
    vertical-align: middle;
}
.hc-name{
    font-size:14px;
    font-weight:bold;
    color:rgba(34,34,34,1);
    margin-bottom: 10px;
}
.hc-address{
    font-size:13px;
    font-weight:500;
    margin-bottom: 10px;
    color:rgba(153,153,153,1);
    line-height:18px;
}
.hc-detail{
    width: 70%;
    display: inline-block;
    text-align: left
}
.hc-selectBtn{
    width: 100%;
    height:64px;
    background:rgba(255,255,255,1);
    box-shadow:0px 0px 7px 0px rgba(126,151,168,0.24);
    position: fixed;
    bottom: 0;
    left: 0;
}
.hc-btn{
    width:357px;
    height:40px;
    margin: 12px auto;
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 9px 0px rgba(255,226,39,0.71);
    border-radius:20px;
    font-size:15px;
    font-weight:400;
    color:rgba(36,1,1,1);
    text-align: center;
    line-height: 40px;
}