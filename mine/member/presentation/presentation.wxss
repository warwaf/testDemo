/* activity/member/presentation/presentation.wxss */
.presentation {
  width: 750rpx;
  height: 1334rpx;
  background-size: 100% 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  margin-top: 88rpx;
}
.presentation .btn {
  width: 690rpx;
  height: 98rpx;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  line-height: 98rpx;
  border-radius: 49rpx;
}

.presentation .btn.buy {
  color: #231815;
  background: linear-gradient(to left, #FFDF14, #FFE852);
}

.presentation .btn.check {
  color: #f5cf84;
  border: 2px solid #f5cf84;
  background: rgba(245, 207, 132, 0.1);
}