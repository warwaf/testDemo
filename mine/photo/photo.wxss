/* pages/mine/photo/photo.wxss */
.photoBox{
    border-top:1rpx solid #e8e8e8;
}
.showBox{
    margin: 80rpx 18rpx 0 18rpx;
}
.swiper-tab{  
    width: 92%;
    margin-left: 4%;
	text-align: center;
	line-height: 80rpx;
    background-color: #fff;
    
}
.swiper-tab-list{  
    display: inline-block;
	width: 50%;
	color: rgba(34,34,34,1);
    font-size: 36rpx;
    font-weight: 300;
}
.texton{
    color: #222;
    font-weight: 500;
    margin: 0 10rpx 0 0;
}
.on{ 
	border-bottom: 8rpx solid rgba(255,216,0,1);
}

.swiper-box{ 
    display: block; 
    height: 100%; 
    width: 100%; 
    overflow: hidden; 
   
}

.title{
    margin:20rpx 0;
    height:40rpx;
    font-size:28rpx;
    font-weight:500;
    color:rgba(153,153,153,1);
    line-height:40rpx;
    text-align: left;
    text-indent: 16rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;

}
.column_box{
    display: flex;
    align-content: center;
    flex-direction: row;
    margin:30rpx 0 0 0 ;
    font-size:28rpx;
    font-weight:500;
    color:rgba(34,34,34,1);
    flex-flow: row wrap; 
}
.imgBox{
    width: 33.1%;
    margin: 0 .115% 30rpx .115%;
    text-align: center
}
.imgBox image{
  width: 210rpx;
   height: 210rpx;
   vertical-align: middle;

}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.noneBox{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    text-align: center
}
.noneBoxImg image {
    margin-top:280rpx;
    width: 212rpx;
    height: 212rpx;
}
.noneWord{
    font-size:30rpx;
    font-weight:400;
    color:rgba(36,1,1,1);
    line-height:42rpx;
    margin: 40rpx 0;
}
.uploadBtn{
    width: 58.66%;
    margin: 0 auto;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size:30rpx;
    font-weight:400;
    color:rgba(36,1,1,1); 
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 13px 0px rgba(255,226,39,0.71);
    border-radius:25px;

}
