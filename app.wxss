.v-compress{
  position: absolute;
  left: -1000px;
  top: -1000px;
}

.upload-btn-animation view{
  position: absolute;
}
.upload-btn-animation .icon-1{
  width: 15px;
  height: 19px;
  position: relative;
  z-index: 1;
  animation-name: shaky-slow;  
  animation-duration: 4s;     
  animation-delay: 0s;       
  animation-iteration-count: infinite;    
  animation-timing-function: ease-in-out; 
  animation-delay: 0s;     
  animation-play-state: running;    
}

.upload-btn-animation .coin-box{
  animation-name: move-top;  
  animation-duration: 1.5s;     
  animation-delay: 0s;       
  animation-iteration-count: infinite;    
  animation-timing-function: ease-out; 
  animation-delay: 0s;     
  animation-play-state: running; 
}

.upload-btn-animation .coin-box .icon{
  animation-name: move-left;  
  animation-duration: 1.5s;     
  animation-delay: 0s;       
  animation-iteration-count: infinite;    
  animation-timing-function: ease-in; 
  animation-delay: 0s;     
  animation-play-state: running;    
}

.upload-btn-animation .coin-box-1{
  animation-name: move-top;  
  animation-duration: 1.5s;     
  animation-delay: 1s;       
  animation-iteration-count: infinite;    
  animation-timing-function: ease-out; 
  animation-play-state: running; 
}

.upload-btn-animation .coin-box-1 .icon{
  animation-name: move-right;  
  animation-duration: 1.5s;     
  animation-delay: 1s;       
  animation-iteration-count: infinite;    
  animation-timing-function: ease-in; 
  animation-play-state: running;    
}

.upload-btn-animation .icon{
  width: 7px;
  height: 7px;
  transform: translateY(-30px);
}


@keyframes move-top {
  0%{
      transform: translateY(-30px);
  }

  100%{
      transform: translateY(-45px);
  }
}

@keyframes move-left {
  0%{
      transform: translateX(5px);
      opacity: 1;
  }
  100%{
      transform: translateX(-12px);
      opacity: 0;
  }
}

@keyframes move-right {
  0%{
      transform: translateX(5px);
      opacity: 1;
  }

  100%{
      transform: translateX(13px);
      opacity: 0;
  }
}