@keyframes shock {
    0%{
        transform: translate(0,0) scale(1)
    }
    30%{
        transform: translate(2px,5px) scale(1.1)
    }
    50%{
        transform: translate(0,0) scale(0.9);
    }
    70%{
        transform: translate(2px,5px) scale(1.1);
    }
    100%{
        transform: translate(0,0) scale(1);
    }
}

@keyframes rotate {
    0%{
        transform: rotate(0);
    }

    100%{
        transform: rotate(360deg);
    }
}

