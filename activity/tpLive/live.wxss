.btn {
  background: linear-gradient(270deg, #ff6561, #ffda9c);
  width: 88vw;
  height: 42px;
  line-height: 42px;
  text-align: center;
  font-size: 18px;
  color: #fff;
  position: absolute;
  bottom: 22px;
  left: 6vw;
  border-radius: 21px;
  box-shadow: 0 5px 0 #d72a25
}

.active-btn {
  background: linear-gradient(270deg, #ff443f, #f2b041);
  bottom: 19px;
  box-shadow: none
}

.share-btn {
  width: 126rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(90deg, #FF7C0A, #FF5002);
  position: fixed;
  right: -1px;
  top: 60rpx;
  border-radius: 100rpx 0 0 100rpx;
  font-size: 12px;
  padding: 0;
  border: 1px solid #FFF;
}

.tools {
  z-index: 3;
  position: fixed;
  bottom: 60px;
  right: 13px;
  transition: right 1s ease-in-out
}

.tools view {
  margin: 10px 0
}

.tools image {
  width: 83px
}

.tools-hide {
  right: -100px
}

@keyframes ghostUpdown {
  from {
    margin-top: 10px
  }

  to {
    margin-top: 0
  }
}

@keyframes poke {
  from {
    left: 142px
  }

  to {
    left: 146px
  }
}

@keyframes shadow {
  from {
    opacity: .5
  }

  to {
    opacity: .1
  }
}