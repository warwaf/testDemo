page{
  height: 100%;
}
.v-detail {
  position: relative;
  width: 100vw;
  /* height: 100%; */
  min-height: 100%;
  padding-bottom: 60px;
  padding-top: 180rpx;
  background: #F03B5A url("https://mtqpic.oss-cn-hangzhou.aliyuncs.com/ar_bg.png.png") no-repeat;
  background-size: 100%;
}
.isDetail{
  position: fixed;
}
.v-detail image {
  width: 100%;
  height: 100%;
}

.v-detail .v-video {
  width: 91vw;
  height: 51.2vw;
  border-radius: 9px;
  z-index: 99;
  margin: -0 4.5vw 0 4.5vw;
}

.v-detail .back {
  position: absolute;
  left: 0;
  top: 30px;
  width: 65px;
  height: 34px;
  background: #ffe84e;
  box-shadow: 0 0 13px 0 rgba(0, 0, 0, .1);
  border-radius: 0 51px 51px 0;
  color: #240101;
  text-align: center;
  line-height: 34px
}

.v-detail-bg {
  position: absolute;
  top: 0;
  left: 0;
}

.v-detail .body {
  width: 100%;
  /* position: absolute; */
  /* background: #F03B5A; */
  padding-bottom: 20px;
}

.v-detail .body .btn-case {
  width: 690rpx;
  height: 98rpx;
  color: #FFF;
  font-size: 18px;
  line-height: 49px;
  margin: 60rpx auto 0;
  text-align: center;
  border-radius: 49rpx;
  border: 3rpx solid #FFF;
  box-shadow: 0px 6rpx 30rpx 0px rgba(148, 0, 24, 0.5);
  background: linear-gradient(180deg, #ffc60b, #ff6b0a 69%, #ff7818);
}

.v-detail .list-case {
  margin-top: 60rpx;
}

.v-detail .list-case .boundary {
  font-size: 18px;
  color: #FFE9C1;
  font-weight: bold;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}

.v-detail .list-case .boundary .middle {
  margin: 0 23rpx;
}

.v-detail .list-case .boundary .left,
.v-detail .list-case .boundary .right {
  display: flex;
  flex-flow: row nowrap;
  justify-content: start;
  align-items: center;
}

.v-detail .list-case .boundary .line {
  width: 231rpx;
  height: 2rpx;
  background: #FFE9C1;
}

.v-detail .list-case .boundary .square {
  width: 17rpx;
  height: 17rpx;
  border: 1px solid #FFE9C1;
  transform: rotate(-45deg);
}

.v-detail .list-case .box {
  padding: 0 30rpx;
}

.v-detail .list-case .participant-case {
  width: 690rpx;
  padding: 0 30rpx;
  margin: 30rpx auto 0;
  border-radius: 20rpx;
  background: #CC2645;
  box-sizing: border-box;
}

.v-detail .list-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-self: start;
  padding: 24rpx 0;
  border-bottom: 1px solid rgba(255, 242, 218, 0.3);
  position: relative;
}

.v-detail .list-item:last-child {
  border: 0 none;
}

.v-detail .list-item .left {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.v-detail .list-item .left .portrait-case {
  position: relative;
}

.v-detail .list-item .left .portrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1px solid #FFF2DA;
}

.v-detail .list-item .left .portrait.empty {
  border-style: dashed;
  border-color: rgba(255, 255, 255, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.v-detail .list-item .left .empty .plus {
  width: 24rpx;
  height: 2rpx;
  background: #FFF2DA;
  position: relative;
}

.v-detail .list-item .left .empty .plus::after {
  content: "";
  width: 24rpx;
  height: 2rpx;
  background: #FFF2DA;
  transform: rotate(90deg);
  position: absolute;
  top: 0;
  left: 0;
}

.v-detail .list-item .left .tag {
  z-index: 10;
  width: 80rpx;
  height: 26rpx;
  font-size: 12px;
  line-height: 13px;
  text-align: center;
  border-radius: 15rpx;
  background: #FFE329;
  border: 1px solid #FFF;
  position: absolute;
  bottom: 0;
}

.v-detail .list-item .left .tag text {
  display: inline-block;
  transform: scale(0.75);
}

.v-detail .list-item .left .info {
  height: 100%;
  display: flex;
  font-size: 13px;
  color: #FFF2DA;
  margin-left: 16rpx;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
}

.v-detail .list-item .left .info .name {
  font-size: 14px;
  font-weight: bold;
}

.v-detail .list-item .left .info .date {
  font-size: 12px;
  margin-top: 8rpx;
  color: rgba(255, 242, 218, 0.7);
}

.v-detail .list-item .left .info.empty {
  justify-content: center;
  align-items: center;
  color: rgba(255, 242, 218, 0.5);
}

.v-detail .list-item .left .info .icon {
  position: absolute;
  top: 5px;
  right: 5px;
}

.v-detail .list-item .right {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: flex-end;
  color: #FFF2DA;
  font-size: 12px;
}

.v-detail .list-item .right.middle {
  justify-content: center;
}

.footer {
  width: 100vw;
  height: 60px;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #FFF;
}

.footer view, .footer button{
  width: 160px;
  height: 40px;
  color: #231815;
  border-radius: 22px;
  border: 1px solid #999;
  display: flex;
  justify-content: center;
  align-items: center
}
.footer .btn-home {
  border-color: #ffe329;
  background-color: #ffe329
}
.footer button{
  border-color: #F03B5A;
  font-size: 16px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #f03b5a;
  margin: 0;
}

.footer .icon-case {
  width: 15px;
  height: 15px;
  margin-right: 5px
}

.footer .btn-download {
  margin-right: 15px
}
/* 分享 */
.share{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 9999;
  top: 0;
  border-radius: 40px 40px 0px 0px;
}
.v-model{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background: rgba(0,0,0,0.5);
}
.share_text{
  position: fixed;
  color: #000;
  z-index: 9999;
  width: 100%;
  background: #f2f2f2;
  bottom: 0;
}
.showShare{
  display: block;
}
.hideShare{
  display: none;
}
.share_item{
  background: #ffffff;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  font-size: 13px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #666666;
  padding: 30px 0 20px 0;
}
.share_button{
  width: 100%;
  height: 49px;
  background: #ffffff;
  font-size: 16px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  margin-top: 10px;
  line-height: 49px;
}
.share_item_img{
  width: 55px;
  height: 55px;
  margin-bottom: 10px;
}
.share_item_button {
  padding: 0;
  line-height: inherit;
  background-color: inherit;
  font-size: 13px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: inherit;
}
.share_item_button::after{
  display: none;
}
.main_success{
  width: 54px !important;
  height: 52px !important;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
}
.sponsorAward_content{
  z-index: 9999;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* position: relative; */
}
.sponsorAward_content_img{
  width: 270px;
  height: 341px;
}
.sponsorAward_content_button{
  position: absolute;
  bottom: 30px;
  width: 200px;
  height: 44px;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(180deg,#ffeeda, #f9d6ad);
  border-radius: 22px;
  box-shadow: 0px 4px 10px 0px rgba(148,0,24,0.3); 
  font-size: 16px;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  color: #732633;
  line-height: 44px;
}
.sponsorAward_content_close{
  position: absolute;
  right: -24px;
  top: -24px;
  width: 24px;
  height: 24px;
}