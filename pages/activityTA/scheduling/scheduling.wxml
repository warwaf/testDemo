<!-- pages/activity/scheduling/scheduling.wxml -->
<view class="scheduling">
	<!-- <navBar page-name="预约详情" class="nav-bar"></navBar> -->
	<view class="con">
		<view class="card">
			<view class="header">
				<!-- <text>预约</text>
				<image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/schedule/step_grey.png"></image>
				<text>确定\n排期</text>
				<image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/schedule/step_grey.png"></image>
				<text>到店\n拍摄</text> -->
			</view>
			<view class="body">
				<view class="line">
					<text class="label">预约门店</text>
					<view class="content">
						<text class="c999999">{{storeInfo.storeName}}</text>
					</view>
				</view>
				<view class="line">
					<text class="label">预约拍摄类型</text>
					<view class="content">
						<text class="c999999">婚纱摄影</text>
					</view>
				</view>
				<view class="line">
					<text class="label">姓名</text>
					<view class="content">
						<text class="c999999">{{userName}}</text>
					</view>
				</view>
				<view class="line">
					<text class="label">手机号</text>
					<view class="content">
						<text class="c999999">{{userPhone}}</text>
					</view>
				</view>
				<view class="line">
					<text class="label"><text style="color: #FF1919;">*</text>拍摄日期</text>
					<view class="content photo-date">
						<view class="c999999 date-case {{photoDate ? 'c231815' : ''}}" catch:tap="handlePop" data-name="date" data-state="show">
							{{photoDate ? photoDate : "请选择"}}
							<image class="arrow" src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/schedule/arrow-down.png"></image>
						</view>
						<view class="check-case" catchtap="toCheck">
							<image class="check" src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/schedule/calendar.png"></image>
							<text>查看档期</text>
						</view>
					</view>
				</view>
				<!-- <view class="line">
					<text class="label">入住日期</text>
					<view class="content">
						<text class="c999999">{{checkInDate ? checkInDate : "选择拍摄日期后自动生成"}}</text>
					</view>
				</view>
				<view class="line">
					<text class="label">退房日期</text>
					<view class="content">
						<text class="c999999">{{checkOutDate ? checkOutDate : "选择拍摄日期后自动生成"}}</text>
					</view>
				</view>
				<view class="line">
					<text class="label">航班号</text>
					<view class="content">
						<input class="c231815" type="text" placeholder="请输入航班号" value="{{flightNo}}" bindinput="handleInput"></input>
					</view>
				</view> -->
				<view class="line">
					<text class="label">交通工具</text>
					<view class="content">
						<view style="position: relative;">
							<view class="content_select" bindtap="popupSelect">
								<input class="c231815" disabled="{{true}}" type="text" placeholder="请选择" value="{{trafficData.name}}" bindinput="handleInput"></input>
								<image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/schedule/arrow-down.png" class="content_select_icon"></image>
							</view>
							<view wx:if="{{isSelectMenu}}" class="content_select_item">
								<view wx:for="{{vehicleList}}" class="{{item.name==trafficData.name?'isColor':''}}" bindtap="popupSelect" data-name="{{item}}">{{item.name}}</view>
							</view>
						</view>
						<input class="c231815" type="text" style="margin-top:12rpx;"  placeholder="请输入航班号/班次" value="{{schedule}}" bindinput="handleInput"></input>
					</view>
				</view>
			</view>
		</view>
		<view class="footer">
			<view class="btn-submit" catch:tap="submit">提交</view>
		</view>
	</view>
</view>

<view class="pop-date" wx:if="{{showDate}}">
	<div class="mask">
		<div class="inner">
			<view class="head">
				选择拍摄日期
				<image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/schedule/close.png" class="close" catch:tap="handlePop" data-name="date" data-state="close"></image>
			</view>
			<calendar bind:onDayTap="onCalendarDayTap" storeNo="{{storeInfo.storeNo}}" selectDate="{{photoDate}}" deadlineDate="{{deadline}}"></calendar>
			<view class="foot">
				<view class="btn" catch:tap="confirmDate">确定</view>
			</view>
		</div>
	</div>
</view>