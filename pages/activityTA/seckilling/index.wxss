        font-family:PingFangSC-Medium,PingFang SC;
        font-weight:500;
        color:rgba(36,1,1,1)
  }
  .seckilling_success button::after{
      border: none;
  }
  .countdown_sfm{
    width:54rpx;
    height:50rpx;
    background:rgba(255,255,255,1);
    border-radius:4px;
    font-size:28rpx;
    line-height: 50rpx;
    text-align: center;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(83,35,22,1);
    display: inline-block;
  }
  .countdown_M{
    font-size:28rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    font-weight:400;
    color:rgba(83,35,22,1);
    margin:0 8rpx;
  }
  /* 秒杀提醒按钮 */
  .secondsKillRemind{
    width:220rpx;
    height:48rpx;
    background:rgba(255,255,255,1);
    line-height: 48rpx;
    border-radius:31rpx;
    font-size:22rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(255,89,6,1);
    padding: 0;
    margin-top: 16rpx;
    display: flex;
    justify-content: center;
    justify-items: center;
    align-items: center;
  }
  .secondsKillRemind>image{
      width: 40rpx !important;
      height: 38rpx !important;
      vertical-align: sub;
      margin-left: 10rpx;
  }
  .stateInQueue_info{
      display: flex;
      align-items: center;
      justify-content: center;
  }
  .stateInQueue_info>view{
      text-align: center;
  }
  .stateInQueue_info image:nth-child(2){
      width: 117rpx;
      height: 146rpx;
  }
  .stateInQueue_info .info_text{
      margin: 0;
      margin-top: 40rpx;
      font-size:32rpx;
        font-family:PingFangSC-Regular,PingFang SC;
        font-weight:400;
        color:rgba(35,24,21,1);
  }