/* pages/activity/seckilling/dataPerfect/index.wxss */
page{
  background: rgb(247, 247, 247);
}
.dataPerfect_content{
  padding: 24rpx 24rpx 0 24rpx;
}
.dataPerfect_content .content_title{
  margin: 0 0 24rpx 0;
  height:66rpx;
  background:rgba(255,245,178,1);
  border-radius:12rpx;
  border:1px solid rgba(255,171,25,1);
  font-size:24rpx;
  line-height: 66rpx;
  text-align: center;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(255,89,6,1);
}
.dataPerfect_content .content_Info{
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 20px 0px rgba(51,51,51,0.1);
  border-radius:20px;
  padding: 30rpx;
}
.dataPerfect_content .content_Info .content_Info_item{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.dataPerfect_content .content_Info .content_Info_item>text{
  width:170rpx;
  height:100%;
  font-size:26rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(35,24,21,1);
  margin-right: 30rpx;
  text-align: right;
}
.dataPerfect_content .content_Info .content_Info_item>input,.dataPerfect_content .content_Info .content_Info_item>view{
  width: calc(100% - 200rpx);
  height: 80rpx;
  background:rgba(242,242,242,1);
  border-radius:12rpx;
  padding: 0 16rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(35,24,21,1);
}
.dataPerfect_content .content_Info .content_Info_item .picker{
  /* width: 100%; */
  height: 80rpx;
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(191,191,191,1);
}
.dataPerfect_content .content_Info .content_Info_item>.picker{
  width: calc(100% - 200rpx);
  height:80rpx;
  background:rgba(242,242,242,1);
  border-radius:12rpx;
}
.dataPerfect_content .content_Info .content_Info_item>.city{
  background: inherit;
  width: calc(100% - 81px);
  padding: 0;
}
.dataPerfect_content .content_Info .content_Info_item:first-child{
  margin-top: 0 !important;
}
.content_Info_item_prompt{
  font-size:20rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(255,89,6,1);
  text-align: right;
  margin-top: 8rpx;
}
.content_remark{
  font-size:24rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(255,89,6,1);
  line-height:33rpx;
  text-align: center;
  margin-top: 26rpx;
}
.dataPerfect_bottom{
  width: 100%;
  height:110rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px -4px 8px 0px rgba(0,0,0,0.04);
  position: fixed;
  bottom: 0;
}
.dataPerfect_bottom>.button{
  width: calc(100% - 60rpx);
  height:88rpx;
  background:rgba(255,243,169,1);
  border-radius:44rpx;
  margin-top: 11rpx;
  line-height: 88rpx;
  text-align: center;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(36,1,1,0.6);
}
.dataPerfect_bottom>button::after{
  border: none;
}
.confirmSubmit{
  width: calc(100% - 60rpx);
  height:88rpx;
  background:rgba(255,226,40,1);
  border-radius:44rpx;
  margin-top: 11rpx;
  line-height: 88rpx;
  text-align: center;
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(36,1,1,1);
}
.dateText{
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(35,24,21,1);
}

.nav-bar{
  height: 120rpx;
  position: fixed;
  top: 0;
  width: 100%;
}
.dataPerfect_infoFinish{
  padding: 24rpx;
  margin-top: 120rpx;
}
.dataPerfect_infoFinish .infoFinish_item{
  background:rgba(255,255,255,1);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
}
.infoFinish_item .infoFinish_item_title>image{
  width: 100%;
  height: 181rpx;
}
.infoFinish_item_text{
  padding: 0 40rpx;
  margin-top: 40rpx;
}
.infoFinish_item_text>view:nth-child(1){
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(35,24,21,1);
  text-align: center;
  line-height:50rpx;
}
.infoFinish_item_text>view:nth-child(2){
  font-size:26rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(99,84,80,1);
  text-align: center;
  text-indent: 1em;
  line-height: 38rpx;
  margin-top: 24rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgba(230,230,230,1);
}
.infoFinish_item_info{
  padding: 40rpx 40rpx 0 40rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.infoFinish_item_info .infoFinish_item_info_bridegroom{
  display: flex;
}
.infoFinish_item_info .infoFinish_item_info_bridegroom>text{
  flex: 1;
}
.infoFinish_item_info .infoFinish_item_info_bridegroom>view{
  font-size:26rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(35,24,21,1);
}
.infoFinish_item_prompt{
  font-size:20rpx;
  text-align: right;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(255,89,6,1);
  padding: 40rpx;
}
.bottom_img{
  width: 100%;
  height: 20rpx;
  display: flex;
}