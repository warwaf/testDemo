<view class="container" hidden="{{isload}}"> 
	<view class="page-body">	
		<view class="weui-uploader">
			<view class="weui-uploader__hd">
					<view class="weui-uploader__title">
					<view class="_tips" wx:if="{{order_sn != ''}}">订单号：{{order_sn}}</view>
					<view class="_tips">作业号：{{job_id}}</view>
					</view>					
					<view class="weui-uploader__info" wx:if="{{Total_num == 1}}">{{upload_num}}/{{Total_photos}}</view>
					<view class="weui-uploader__info" wx:if="{{Total_num != 1}}">{{upload_num}}</view>
			</view>
			<view class="weui-uploader__bd">
					<view class="weui-uploader__files">
						<block wx:for="{{list}}" wx:key="index" wx:for-item="item">		
							<view class="weui-uploader__file"						
								bindtap="onItemClick"  data-key="{{index}}" data-item="{{item}}">
								<view class="{{index==0 && item.src==null?'weui-uploader__input-box':'weui-uploader__item-box'}}">				
								<image src="{{item.src}}" mode="aspectFill"></image>									
								</view>								
							<view class="weui-uploader__file-content" wx:if="{{item.isupload== -1}}">						
								<icon  type="warn" class="quality_warn" size="20"></icon>
							</view>
							 <view class="dellete" wx:if="{{isdel==true&&item.src!=null}}" data-key="{{index}}" data-item="{{item}}"  catchtap="deletePhotos">
								<view class="icon_delete"></view>                
							</view>
              
							<view class="uploadmsk" wx:if="{{item.src!=null && item.isupload!= 1}}"></view>
              <view class="uploadprogress" wx:if="{{item.src!=null && item.isupload!= 1}}">
                  <progress  wx:if="{{uploadKey==index}}" percent="{{percent}}" backgroundColor="#ff4d4d" />
                  <progress  wx:if="{{uploadKey!=index}}" percent="0" backgroundColor="#ff4d4d" active />
              </view>
							</view>
             
					</block>	
				</view>
				<view class="weui-uploader__input-box" bindtap="onItemClick"  wx:if="{{!(Total_num >0)}}"></view>	
			</view>

		</view>
		<view class="submit_btn">
				<view class="comfirm_submit"  style="background-color: {{isuploadclick === false?'':'#eee'}}; color: {{isuploadclick === false?'':'#999999'}}"  bindtap="uploadimage">点击上传</view>
				<view class="comfirm_submit"  style="background-color: {{iscancel === false?'':'#eee'}};color: {{iscancel === false?'':'#999999'}}"  bindtap="CancelCTaskClick" wx:if="CancelCTask==1">取消上传</view>
				<view class="comfirm_submit"  style="background-color: {{isdel === false?'':'#eee'}};color: {{isdel === false?'':'#999999'}}" bindtap="showdeletcon" wx:if="DeleteCPhotos==1">{{isdel === false?'删除照片':'取消删除'}}</view>
				<view class="comfirm_submit" style="display: {{finishtask === true ?'block':'none'}}"   bindtap="FinishCTask">结束上传</view>
			</view>
		
	</view>
</view>
