.tipBox{
    width: 100%;
    height:100%;
    position: fixed;
    bottom: 0;
    left: 0;
}
.hc-bg{
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: #888;
    opacity: 0.6;
    z-index: 1;
}
.tipContent{
    width: 100%;
    height:220px;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    text-align: center;
    background-color: #fff;
    
}
.hc-topWord{
    width: 100%;
    height: 40px;
    line-height: 40px;
    float: left
}
.hc-cancle{
    width: 20%;
    height: 40px;
    line-break: 40px;
    float: left;
    font-size: 15px;
}
.hc-tip{
    width: 60%;
    height: 40px;
    line-break: 40px;
    float: left;
    text-align: center;
    font-size: 20px;
    color:rgba(34,34,34,1);
}
.hc-word{
    font-size:17px;
    margin:40px 0 30px 0;
    color:rgba(34,34,34,1);
}
.hc-tipBtn{
    margin: 0 auto;
    width:220px;
    height:44px;
    color: #240101;
    line-height: 44px;
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 13px 0px rgba(255,226,39,0.71);
    border-radius:25px;
}
.hc-top-dot{
    margin-top: 12px;
}
.hc-top-dot image{
    width: 94px;
    height: 94px;
}
.hc-word-success{
    font-size: 18px;
     margin:0px 0 20px 0;
    color:rgba(34,34,34,1);
    font-weight:400;
}
.hc-textarea-word{
    position: absolute;
    bottom: 0px;
    right: 0;
    color: #999999;
}
.addPic{
    display: none
}
.progress{
    position:absolute;
    bottom:0;
    left:0;
    top:0;
    right:0;
    background:rgba(0,0,0,0.5);
}
.progress image{
    width: 50rpx!important;
    height: 50rpx!important; 
    position:relative;
    top:25%;
    left:25%;
}
.progress .progress-txt{
    padding-top:40px;
    display:inline-block;
    font-size:13px;
    color:#FFD800;
}
.hc-active{
    background:linear-gradient(104deg,rgba(233,233,233,1) 0%,rgba(225,225,225,1) 100%);
    box-shadow:0px 0px 4px 0px rgba(233,233,233,1);
    
}
.hc-noactive{
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 4px 0px rgba(255,226,39,0.71);
}
.dotBox{
    display: inline-block;
    padding: 20rpx;
    position: absolute;
    left: 10rpx;
    top: 1px;
    border:1rpx solid #e8e8e8;
    border-radius: 100%;
}
.cover{
    height: 22px;
    line-height: 22px;
    background-color: rgba(0,0,0,0.5);
    text-align: center;
    color: #FFF;
    position: absolute;
    bottom: 0;
    left:0;
    right: 0;
    border-radius: 0 0 3px 3px;
}
.cover-warning{
    height: 22px;
    line-height: 22px;
    background-color: rgba(0,0,0,0.5);
    text-align: center;
    color: red;
    position: absolute;
    bottom: 0;
    left:0;
    right: 0;
    font-size: 12px;
    border-radius: 0 0 3px 3px;
}