/* pages/discovery/create-dynamics/create-dynamics.wxss */
.v-compress{
    position: absolute;
    left: -1000px;
    top: -1000px;
}
.hc-conmentbox{
    padding:20rpx 20rpx 0 20rpx;
    border-top: 1px solid #e8e8e8;
}
.hc-textarea{
    text-indent: 20rpx;
    color: #222222;
    text-align: left;
    font-size: 30rpx;
    display: flex;
    flex-flow: row wrap; 
    align-content: space-around;
    position: relative;
    height: 170px;

}
.textarea{
    width: 100%;
    text-indent: 20px;
    /* overflow-y:hidden; */
    word-break:break-all;
    word-wrap:break-word;
    font-size: 30rpx;
}
.hc-img{
    width: 100%;
    margin: 20rpx 0;
    position: relative;
    overflow: hidden;
}
.hc-imglist{
    width: 60px;
    height: 60px;
    margin: 5px;
    /* position: absolute; */
    float: left;
}

.hc-imglist image{
    width: 100%;
    height: 100%;
}

.hc-title{
    width: 100%;
}
.title-word{
    color: #222222;
    font-weight: 600;
    letter-spacing: 2rpx;
    font-size: 30rpx;
}
.hc-selectBox{
     margin: 20rpx 0;
}
.hc-selectlist{
    display: inline-block;
    margin-bottom: 20rpx;
    position: relative
}
.single-title{
    margin-right: 20rpx;
    padding: 5rpx 45rpx 5rpx 15rpx;
    display: inline-block;
     border:1px solid #e8e8e8;
    border-radius: 4rpx;
    font-size: 30rpx;
    font-weight: 400;
}
.hc-close{
    position: absolute;
    right: 0rpx;
    top: 10rpx;
    width: 30rpx;
    text-align: center;
    line-height: 30rpx;
    height: 30rpx;
    color: #fff;
    
}
.hc-closeImg{
    position: absolute;
    right: 30rpx;
    top: 12rpx;
    width: 30rpx;
    text-align: center;
    height: 30rpx;
    line-height: 26rpx;
    background-color: #fff;
    color: #fff;
    font-size: 24rpx;
}
.selectTitle{
    background-color: #FFD800;
    border:1px solid #fff!important;
}
.noSelect{
    background-color: #fff;
    

}
.selectClose{
    color: #FFD800;
    border-radius: 100%;
    display: inline-block
}
noClose{
    display: none
}
.hc-contact{
    line-height: 80rpx;
    height: 80rpx;
    font-size: 26rpx;
    color: #222222
}
.hc-dot{
    padding: 25rpx 10rpx 10rpx 10rpx;
    position: relative;
    display: inline-block;
    margin-right:40rpx;
}
.dotBoxt{
    
    width: 30rpx;
    height: 30rpx;
    border-radius: 100%;
    border:2rpx solid #e8e8e8;
   position: absolute;
    display: inline-block;
    left: 0;
    top: 0;
}
.hc-agree{
    width: 12rpx;
    height: 12rpx;
    background-color: #FFD800;
    border-radius: 100%;
    border: 2rpx solid #FFD800;
    position: absolute;
    top:12rpx;
    left: 12rpx;

}
.hc-btnBox{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 64px;
    box-shadow:0px 0px 7px 0px rgba(126,151,168,0.24);
    
}
.hc-btn{
    width:357px;
    height:40px;
    margin: 12px auto;
    border-radius:20px;
    text-align: center;
    line-height: 40px;
    font-size: 30rpx;
    color: #240101;
    border:1px solid #fff!important;

}
.hc-close{
    position: absolute;
    top:0;
    right:0px;
    width: 20px;
    height: 20px;
}
.hc-close image{
    width: 20px;
    height: 20px;

}
.hc-imgBox{
    width: 120rpx;
    height: 120rpx;
    position: relative;
    overflow:hidden;
    border-radius: 10rpx;

}
