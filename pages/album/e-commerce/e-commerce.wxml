    <view class="protocol">
        <button class="hc-button" catchtap="modify">修改授权手机号</button>
    </view>
</view>


<protocol wx:if="{{showProtocol}}" bind:clickEvent="agreeEvent"></protocol>

<view class="layout" wx:if="{{phoneStat}}" catchtap='editPhone'>
    <view class="edit-view" catchtap="stop">
        <view class="header" wx:if="{{phoneStat === 1}}">手机号</view>
        <view class="header" wx:if="{{phoneStat === 2}}">验证码</view>
        <view class="header" wx:if="{{phoneStat === 3}}">绑定手机号</view>
        <view class="comfirm" catchtap='getVerifyCode' wx:if="{{phoneStat === 1}}">获取验证码</view>
        <view class="comfirm" catchtap='bindPhone' wx:if="{{phoneStat === 2}}">下一步</view>
        <view class="comfirm" catchtap='editPhone' wx:if="{{phoneStat === 3}}">完成</view>
        <view class="text-body" wx:if="{{phoneStat === 1}}">
            <input type="number" placeholder='请输入手机号' bindinput='bindPhoneInput'></input>
        </view>

        
        <view class="digital-body" wx:if="{{phoneStat === 2}}">
            <view class="tips">已发送验证码到 <text>{{partPhone}}</text></view>
            <view class='blocks'>
                <view class="block">
                    <view wx:if="{{!numList.length}}" class="cursor"></view>
                    <text wx:if="{{numList.length}}">{{numList[0]}}</text>
                </view>
                <view class="block">
                    <view wx:if="{{numList.length===1}}" class="cursor"></view>
                    <text wx:if="{{numList.length>=2}}">{{numList[1]}}</text>
                </view>
                <view class="block">
                    <view wx:if="{{numList.length===2}}" class="cursor"></view>
                    <text wx:if="{{numList.length>=3}}">{{numList[2]}}</text>
                </view>
                <view class="block">
                    <view wx:if="{{numList.length===3}}" class="cursor"></view>
                    <text wx:if="{{numList.length>=4}}">{{numList[3]}}</text>
                </view>
                <input type='number' maxlength='4' focus='true' auto-focus='true' bindinput='bindCodeInput' wx:if="{{!disableInput}}"></input>
            </view>
        </view>
    </view>
</view>
