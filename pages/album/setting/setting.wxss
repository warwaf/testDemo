/* pages/album/setting/setting.wxss */
page{
    background-color: #F8F8F8;
}
.mt20{
    margin-top: 20px;
}
.header{
    padding: 10px 20px;
    color: #121212;
    font-size: 14px;
}
.header image{
    width: 4px;
    height: 14px;
    margin-right: 5px;
}
.header switch{
    float: right;
}
.header .icon{
    float: right;
    width: 15px;
    height: 15px;
    margin-right: 15px;
}
.members{
    padding: 10px;
    width: calc(100vw - 20px);
    display: flex;
    flex-flow: wrap;
    position: relative;
}
.members>image{
    width: 11vw;
    height: 11vw;
    margin: 2vw;
    border-radius: 50%;
}
.members .ring{
    width: 10px;
    height: 8px;
    position: absolute;
    top: 10px;
    margin: 0;
}

.setting .title {
    width: 80%;
    padding: 0 5%;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    background-color: #F1F3F5;
    height: 40px;
    border-radius: 20px;
    align-items: center;
}
.setting .title text{
    color: #222222;
    font-size: 14px;
    width: 80%;
}
.setting .title image{
    width: 15px;
    height: 15px;
}
.banner{
    width: 335px;
    /* height: 167px; */
    margin: 10px auto;
    position: relative;
    overflow:hidden;
    border-radius:0 0 10px 10px;
}
.setting .banner view{
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    position: absolute;
    bottom: 0;
    background-color: rgba(255,255,255,.9);
    border-radius: 0 0 10px 10px;
    color: #510909;
}
.setting .banner>image{
    width: 335px;
}
.setting .banner view image{
    width: 15px;
    height: 15px;
    margin-right: 10px;
}
.setting .btn{
    width: 90%;
    height: 44px;
    margin: 30px auto 10px auto;
    line-height: 44px;
    border-radius: 22px;
    color: #240101;
    font-size: 15px;
    background: linear-gradient(to bottom, #FFE74F, #FFE227);
    text-align: center;
}
.setting .quit-btn{
    background: #fff !important;
    margin-top: 10px;
    border: 1px solid #EEE;
}
.layout{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0,0,0,.5);
}
.layout .titleStat{
    background-color: #fff;
    position: fixed;
    bottom: 0;
    width: 100vw;
}
.layout .titleStat .top{
    display: flex;
    padding: 0 10px;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    font-size: 20px;
}
.layout .titleStat .input{
    margin: 80px auto;
    width: 80%;
    height: 40px;
    line-height: 40px;
    text-align: center;
    border-bottom: 1px solid #FFDD00;
}
.layout .cancle{
    color: #666666;
    font-size: 14px;
}
.layout .comfirm{
    color: #FFB800;
    font-size: 14px;
}
.layout .tips{
    padding: 40px 0;
    height: 120px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.layout .tips image{
    width: 35px;
    margin: 20px 0;
}
.layout .comfirm-btn{
    height: 44px;
    width: 220px;
    border-radius: 22px;
    text-align: center;
    line-height: 44px;
    font-size: 15px;
    color: #240101;
    background: linear-gradient(#FFE74F,#FFE227);
}
.banner-layout{
    position: absolute;
    width: 100vw;
    min-height: 200vh;
    top: 0;
    left: 0;
    background-color: #fff;
}
.banner-list{
    width: 90%;
    margin: 0 auto 30px auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.banner-list image{
    width: 49%;
    height: 90px;
    margin-top: 10px;
    border-radius: 5px;
}
.tipBox{
    width: 100%;
    height:100%;
    position: fixed;
    bottom: 0;
    left: 0;
}
.hc-bg{
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: #888;
    opacity: 0.6;
    z-index: 1;
}
.tipContent{
    width: 100%;
    height:220px;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
    display: flex;
    flex-direction: column;
    text-align: center;
    background-color: #fff;
    
}
.hc-topWord{
    width: 100%;
    height: 40px;
    line-height: 40px;
    float: left
}
.hc-cancle{
    width: 20%;
    height: 40px;
    line-break: 40px;
    float: left;
    font-size: 15px;
}
.hc-tip{
    width: 60%;
    height: 40px;
    line-break: 40px;
    float: left;
    text-align: center;
    font-size: 20px;
    color:rgba(34,34,34,1);
}
.hc-word{
    font-size:17px;
    margin:40px 0 30px 0;
    color:rgba(34,34,34,1);
}
.hc-tipBtn{
    margin: 0 auto;
    width:220px;
    height:44px;
    color: #240101;
    line-height: 44px;
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 13px 0px rgba(255,226,39,0.71);
    border-radius:25px;
}

.password-mask{
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,.5);
}
.password-mask>view{
    position: absolute;
    background-color: #FFF;
    bottom: 0;
    width: 100%;
    height: 220px;
}
.password-mask .session-header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 15px;
    width: calc(100% - 30px);
    height: 40px;
}
.password-mask .session-header text:nth-child(1){
    color: #666666;
    font-size: 15px;
}
.password-mask .session-header text:nth-child(2){
    color: #222222;
    font-size: 20px;
}
.password-mask .session-header text:nth-child(3){
    color: #FFB800;
    font-size: 15px;
}
.password-mask .session-body input{
    margin: 41px;
    border-bottom: 1px solid #FFDD00;
    height:40px;
    line-height:40px;
    font-size:16px;
    text-align:center;
}
.share-btn{
    color: #fff;
    display: flex;
    flex-direction: column;
    background-color: transparent;
    height: 11vw;
    align-items: center;
    border:none;
    margin: 2vw;
    padding: 0;
}
.share-btn image{
    width: 11vw;
}
.share-btn::after {
    border:none;
}
.row{
    padding: 10px 0 15px 15px;
    margin: 10px 20px;
    color: #121212;
    font-size: 14px;
}
.row switch{
    float: right;
}
.row image{
    width: 15px;
    height: 15px;
    float: right;
    margin-right: 15px;
}
.bb{
    border-bottom: 1px solid #DEE1E9;
    box-shadow: 0 2px 5px #F1F3F8;
}

