                <!-- <image wx:if="item.bannerImg" src="{{item.bannerImg1}}" style="background-image: url('{{item.bannerImg}}'');"></image>
                <image wx:else src="{{item.bannerImg1}}" style="background-image: url('https://hcmtq.oss-accelerate.aliyuncs.com/resources/placeholder.png');background-size: cover;"></image> -->
                <image wx:if="item.bannerImg" src="{{item.bannerImg1}}" style="background-image: url('{{item.bannerImg}}');"></image>
                <image wx:else src="{{item.bannerImg1}}" style="background-image: url('https://hucai-simoo.oss-cn-hangzhou.aliyuncs.com/p1.hucai.com/20190326/C0002928120190326/origin/4e388aec350f4fd78d6751ed5cce24ed.png');background-size: cover;"></image>
            </view>
            <view class="name">{{item.activityName}}</view>
            <view class="date">{{item.createTime || '2020-01-01'}}</view>
            <!-- <view class="date">
                <text>{{filter.splitActivityId(item.activityId)}}</text>
            </view> -->
            <!-- <image class="beauty" src="https://hcmtq.oss-accelerate.aliyuncs.com/resources/beauty.png" wx:if="{{item.typeId == 1}}"></image> -->
            <view class="views" wx:if="{{item.browseCount}}">
                <image src="https://hcmtq.oss-accelerate.aliyuncs.com/resources/eye.png" wx:if="{{curMenuIndex == 1}}" />
