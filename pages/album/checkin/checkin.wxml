<view wx:if="{{!isEmpty}}">   
    <view class="list-container">
        <!-- 新手指导 -->
        <image src="https://hcmtq.oss-accelerate.aliyuncs.com/resources/guidance-checkin-2.png" class="guidance" mode="widthFix" wx:if="{{guidance == 2}}"/>
        <!-- <view></view> -->
