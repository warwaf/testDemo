        icon="2"
        bind:confirmEvent="userInfoEvent2"
    ></userInfo>
    <view class="btn" bindtap="giveUp">我不参加了</view>
</view>

<view class="mask" wx:if="{{showWelcome}}" catchtap="closeWelcome">
    <view class="welcome" catchtap="stop">
        <view class="top" style="background: url('https://hucai-simoo.oss-cn-hangzhou.aliyuncs.com/p1.hucai.com/20190326/C0002928120190326/origin/207a089cf8b74b7c98bac9f28b673c25.png')">
            <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v2.1/icon11.png" mode="widthFix"></image>
            <view>欢迎来到鲜檬云相册</view>
        </view>
        <view class="body">
            <view class="txt">小檬已为您准备超大容量云相册 <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v2.1/icon12.png"/> </view>
            <view class="types">
                <view wx:for="{{roomTypes}}" wx:key="type" class="type">
                    <image src="{{item.url}}" class="img" />
                    <view class="t">{{item.type}}</view>
                    <view class="d">{{item.desc}}</view>
                    <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v2.1/label{{index + 1}}.png" class="label" />
                </view>
            </view>
            <view class="btn" catchtap="closeWelcome">确定</view>
        </view>
        <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v2.1/icon13.png" class="close-btn" catchtap="closeWelcome"/>
    </view>
</view>

<view class="tool-case" catch:tap="toAr">
    <image class="icon-ar" src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resources/new/ar@2x.png"></image>
