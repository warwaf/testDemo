/* pages/album/searchalbum/searchalbum.wxss */
.box{
    border-top: 2rpx solid rgba(255,255,255,1);
}
.searchaBox{
    padding: 20rpx 20rpx;
    display: flex;
    justify-content: center;
    align-content: center;
    flex-direction: row;
    border-top: 2rpx solid rgba(237,237,237,1);
}
.search_box{
    width: 88%;
    height: 70rpx;
    background:rgba(241,243,245,1);
    border-radius:124rpx 124rpx;
}
.s_b_icon{
    width: 12%;
    margin-left: 20rpx;
    height: 70rpx;
    float: left;
    text-align: center
}
.s_b_icon image{
    width: 26rpx;
    height: 26rpx;
    margin: 20rpx auto;
}
.s_b_search{
    width: 81%;
    float: left;
    position: relative
}
.s_b_search input{
    width: 90%;
    margin-top:2rpx;
    height: 64rpx;
    font-size: 26rpx;
}
.btn{
    width: 12%;
    line-height: 70rpx;
    text-align: right;
    font-weight:400;
    font-size: 32rpx;
    color:rgba(36,1,1,1);
}
.close{
    width: 31rpx;
    height: 32rpx;
    line-height: 26rpx;
    position: absolute;
    top:20rpx;
    right: 0rpx;
    background-color: #999999;
    border-radius: 50%;
    color: #fff;
    text-align: center;
    font-size: 14px;
}
.s_result{
    text-align: center;
    font-size:28rpx;
    font-weight:500;
    color:rgba(36,1,1,1);
    margin: 0 0 20rpx 0
}
.list-container{
    width: 100%;
    position: absolute;
    top: 140rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 80px;
}
.result_none{
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;
    border-top: 1rpx solid rgba(241,243,245,1)
}
.r_n_img{
    margin-top: 150rpx;
    text-align: center
}
.r_n_img image{
    width: 260rpx;
    height: 260rpx;
}
.r_n_word {
    height:44rpx;
    font-size:32rpx;
    font-weight:400;
    color:rgba(36,1,1,1);
    text-align: center;
    margin:30rpx 0;
}
.r_n_second{
    width: 58%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size:30rpx;
    font-weight:400;
    color:rgba(36,1,1,1);
    background:linear-gradient(104deg,rgba(255,231,79,1) 0%,rgba(255,226,39,1) 100%);
    box-shadow:0px 0px 26rpx 0px rgba(255,226,39,0.71);
    border-radius:50rpx;
    margin: 0 auto 30rpx;

}
.r_n_goback{
     width: 58%;
     border-radius:50rpx;
    border:1px solid rgba(255,216,0,1);
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size:30rpx;
    font-weight:400;
    color:rgba(36,1,1,1);
    margin: 0 auto;
}
.room_item{
    margin-bottom: 14px;
    padding: 10px 10px 0 10px;
    background-color: #fff;
    box-shadow: 0 0 20px rgba(0,0,0,0.15);
    border-top: 2px #FFEB4F solid;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}
.name{
	text-align: center;
    color: #240101;
    font-size: 16px;
}
.date{
    text-align: center;
    font-size: 14px;
    margin: 10px 0;
    color: #999999;
}
.image_container image{
    width: 305px;
    height: 162px;
}
