<scroll-view class="avatars" style="height: {{ mineImg.picUrl ? 'calc(100vh - 137px)' : 'calc(90vh)' }}" scroll-y="{{true}}" bindscrolltolower="loadData">
    <view wx:for="{{list}}" wx:key="index">
        <image  
            class="avatar"
            mode="aspectFill" 
            bindtap="searchResult"
            data-info="{{item}}"
            src="{{item.picUrl}}?x-oss-process=image/crop,x_{{item.left-45}},y_{{item.top-45}},w_{{item.width+90}},h_{{item.height+90}}">
        </image>
    </view>
</scroll-view>
<view class="btn-fixed" bindtap='searchmine' wx:if="{{!mineImg.picUrl}}">找到自己</view>

