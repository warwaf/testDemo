<view class="bg" style="background: url('https://hcmtq.oss-accelerate.aliyuncs.com/resources/search/bg@2x.png')" wx:if="{{mineImg.picUrl}}">
    <text>自己</text>
    <image class="avatar" 
        wx:if="{{mineImg.picUrl}}" 
        mode="aspectFill" 
        catchtap='searchwho'
        data-info="{{mineImg}}"
        data-from="mine" 
        src="{{mineImg.picUrl}}?x-oss-process=image/crop,x_{{mineImg.left-45}},y_{{mineImg.top-45}},w_{{mineImg.width+90}},h_{{mineImg.height+90}}">
    </image>
    <view class="radius"></view>
</view>

