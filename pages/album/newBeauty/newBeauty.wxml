<!--pages/album/newBeauty/newBeauty.wxml-->
<scroll-view scroll-x="true" class="scenes">
    <view class="scene" wx:for="{{data}}" wx:key="name">
        <image src="{{item.pics[0].thumbnailUrl}}" catchtap="switchScene" data-index="{{index}}" data-item="{{item}}"></image>
        <view class="{{curIndex == index ? 'active' : ''}} name">{{item.name}}</view>
        <view class="arrow" wx:if="{{curIndex == index}}"></view>
    </view>
</scroll-view>

<view class="body">
    <view class="header">
        <text class="line-name">{{data[curIndex].name}}</text>
        <view class="right-case">
            <view class="total">照片数: {{data[curIndex].pics.length}}</view>
            <view class="state" wx:if="{{typeId == 12}}">
            <!-- layoutStatus: 11有更新，2确认，1不满意 -->
                <image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/200520/state_update.png" wx:if="{{data[curIndex].layoutStatus == 11}}"/>
                <image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/200520/state_like.png" wx:if="{{data[curIndex].layoutStatus == 2}}"/>
                <image src="https://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/200520/state_dislike.png" wx:if="{{data[curIndex].layoutStatus == 1}}"/>
                <text >{{statusList[data[curIndex].layoutStatus]}}</text>
            </view>
            <view>
                <image src="https://hcmtq.oss-accelerate.aliyuncs.com/resources/home-menu-2.png" mode="widthFix" bindtap="toSetting"/>
            </view>
        </view>
    </view>
    <view class="waterfall clear">
        <view class="waterfall-item" wx:for="{{data[curIndex].pics}}" wx:key="picId">
            <!-- <image src="{{item.picUrl}}?x-oss-process=image/resize,w_400/auto-orient,1" mode="aspectFill" catchtap="showDetail" data-index="{{index}}" /> -->
            <view class="img-case">
                <image src="{{typeId != 11 ? item.finePic : item.thumbnailUrl2}}" mode="aspectFill" lazy-load="{{true}}" catchtap="showDetail" data-index="{{index}}" />
            </view>
            <!-- <view class="parise">
                <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v2.1/icon1.png" />
                <text>{{item.praiseCount}}</text>
            </view> -->
            <view style="color: #666666; font-size: 12px;">{{item.sortedFileName}}</view>
        </view>
    </view>
</view>

