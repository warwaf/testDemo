<view class="btn" catchtap="toFilm" wx:if="{{typeId == 12}}">查看设计片</view>

<view class="mask" wx:if="{{showShare}}" catchtap="closeMask">
    <view class="inner" catchtap="stop">
        <view class="h" style="color: #240101; font-size: 15px;">请选择分享内容</view>
        <view class="option" catchtap="changOption" data-index="0">
            <view class="c {{optionIndex == 0 ? 'active' : ''}}"> <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v1.4/setting-picked.png" wx:if="{{optionIndex == 0}}" /> </view> 分享全部照片
        </view>
        <view class="option" catchtap="changOption" data-index="1">
            <view class="c {{optionIndex == 1 ? 'active' : ''}}"> <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v1.4/setting-picked.png" wx:if="{{optionIndex == 1}}"/> </view> 只分享设计片
        </view>
        <button open-type="share" hover-class="none" class="btn">确定</button>
    </view>
</view>

