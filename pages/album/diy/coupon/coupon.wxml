<!-- 选择优惠券弹层 -->
<view class="layout">
    <view class="title">请选择优惠券：</view>
    <view class="coupon-item" wx:for="{{couponList}}" wx:key="index" catchtap="pickCoupon" data-index="{{index}}" wx:if="{{item.CouponMoney != 0}}">
        <view class="circle {{curCouponIndex === index ? 'selected' : ''}}"><image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v1.4/setting-picked.png" wx:if="{{curCouponIndex === index}}"/></view>
        <view class="content">
            <view class="l">
                <view>{{item.CouponName}} <text class="postage-free" wx:if="{{item.OrderContainPostage == 'true'}}">免运费</text> </view>
                <view>{{item.UseTime}}</view>
                <view>{{item.Describes}}</view>
            </view>
            <view class="r">
                <view>￥{{item.CouponMoney}}</view>
                <view>立即使用</view>
            </view>
        </view>
    </view>
    <view class="coupon-foot" catchtap="pickCoupon" data-index="{{-1}}">
        <view class="circle {{curCouponIndex === -1 ? 'selected' : ''}}">
            <image src="http://hcmtq.oss-cn-hangzhou.aliyuncs.com/resource2020/v1.4/setting-picked.png" wx:if="{{curCouponIndex === false}}"/>
        </view>
        <view>不用优惠券了，有钱任性</view>
    </view>
</view>
