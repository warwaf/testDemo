/* pages/album/subscribe/result/result.wxss */

page {
    background: #fbfbfb;
}

.v-result {
    text-align: center;
    font-size: 14px;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(36, 1, 1, 1);
    margin-top: 31px;
    margin-bottom: 15px;
}

.v-result image {
    display: inline-block;
    width: 140px;
    height: 126px;
    margin-bottom: 15px;
}

.v-detail {
    width: 325px;
    height: 166px;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 10px 0px rgba(241, 243, 248, 1);
    margin: 15px auto;
    position: relative;
    padding: 15px;
}

.v-detail .title {
    font-size: 14px;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(18, 18, 18, 1);
    border-left: 3px solid rgba(255, 231, 79, 1);
    padding-left: 10px;
    margin-left: 0;
    margin-bottom: 10px;
}

.v-detail .v-detail-item {
    font-weight: 500;
    font-size: 13px;
    padding: 5px 0;
}

.v-detail .v-detail-item .header {
    color: rgba(153, 153, 153, 1);
    width: 65px;
    display: inline-block;
}

.v-detail .v-detail-item text {
    color: #222;
}

.v-present {
    text-align: center;
    margin-top: 30px;
}

.v-present .btn {
    width: 274px;
    height: 44px;
    font-size: 15px;
    line-height: 44px;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(36, 1, 1, 1);
    background: linear-gradient(104deg, rgba(255, 231, 79, 1) 0%, rgba(255, 226, 39, 1) 100%);
    box-shadow: 0px 0px 13px 0px rgba(255, 226, 39, 0.71);
    border-radius: 25px;
    display: inline-block;
    margin-top: 50px;
}