
.page-box{
	min-height: 100vh;
	background-repeat: no-repeat;
	background-size: 100% auto;
}
.top{
	position: relative;
}
.logo{
	width: 80rpx;
	padding-top: 40rpx;
	margin-left: 30rpx;
}
.logo image{
	width: 80rpx;
	height: auto;
	border-radius: 10rpx;
}

button::after{
	border: none !important;
}

.share{
	width: 116rpx;
	height: 64rpx;
	background: no-repeat;
	position: fixed;
	border: none !important;
	right: 0;
	top: 48rpx;
	padding: 0 !important;
	border-radius: 0 !important;
	margin: 0 !important;
	background: none !important;
	border-color: transparent !important;
}
.share image{
	width: 116rpx;
	position: absolute;
	left: 0;
}

.activity-title{
	width: 90%;
	margin: 40rpx auto 0;
	text-align: center;
	color: #ffffff;
	font-size: 50rpx;
	font-weight: 600;
	letter-spacing: 2rpx;
	/* overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap; */
	line-height: 84rpx;
}

.activity-list{
	margin-top: 84rpx;
	padding: 0 50rpx;
}
/* 
