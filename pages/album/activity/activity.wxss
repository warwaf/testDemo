	width: 400rpx;
} */

.activity-list .item{
	padding-bottom: 48rpx;
}

.activity-list .item.right{
	text-align: right;
}
.activity-list .item.center .tt,
.activity-list .item.center .img image,
.activity-list .item.center .img{
	width: 520rpx;
}

.activity-list .item.center .tt image{
	width: 520rpx;
} 

.activity-list .item.center{
	text-align: center;
	margin-bottom: 60rpx;
}

.activity-list .li{
	display: inline-block;
}

.activity-list .img image{
	display: block;
	width: 400rpx;
}

.scenes-title{
	width: 100%;
	height: 210rpx;
	background-repeat: no-repeat;
	background-size: 100% auto;
	padding-top: 15rpx;
	font-size: 38rpx;
	color: #ffffff;
	text-align: center;
}

.activity-list .tt{
	position: relative;
	width: 400rpx;
	/* padding: 0 22rpx; */
	text-align: center;
	margin-top: 0;
	display: flex;
	justify-items: center;
	justify-content: center;
	align-items: center;
}

.activity-list .tt .h5{
	flex: 1 0 0;
	padding: 0 30rpx;
	font-size: 36rpx;
	color: #ffffff;
	font-weight: 600;
	padding-bottom: 20rpx;
	text-shadow: 0 2px 2px rgba(144,0,8,0.1);
}

.activity-list .item.center .tt .h5{
	flex: 1 0 0;
	padding: 0 30rpx;
	font-size: 36rpx;
	color: #ffffff;
	font-weight: 600;
	padding-bottom: 20rpx;
	text-shadow: 0 2px 2px rgba(144,0,8,0.1);
}

.activity-list .tt image{
	display: block;
	width: 400rpx;
	position: absolute;
	left: 0rpx;
	top: 0rpx;
}

.activity-info{
	margin: 0 50rpx;
	color: rgba(242,242,242,1);
	font-size: 24rpx;
	padding-top: 40rpx;
}

.activity-info .li{
	display: flex;
	margin-bottom: 14rpx;
}

.activity-info .lable{
	width: 74rpx;
}

.activity-info .item{
	
	flex: 1 0 0;
}

.activity-info .desc{
	padding-bottom: 80rpx;
	padding-top: 10rpx;
}

.ban_content{
  z-index: 9999;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 300px;
  /* height: 300px; */
  background: #ffffff;
  border-radius: 15px;
}
.ban_content .ban_content_image{
  width: 140px;
    height: 100px;
}
.ban_content .ban_content_text{
  font-size: 15px;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #333333;
  margin-top: 12px;
}
.ban_content_button{
  margin-top: 43px;
  background: #ffe329;
  border-radius: 49px;
  height: 49px;
  font-size: 16px;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #1a1a1a;
  line-height: 49px;
}
.ban_content_item{
  padding: 30px;
}
.home_page{
  overflow: auto;
    height: 100%;
}
.home_content{
  filter: blur(8px);
  height: 100% !important;
}
.home_coupon{
  position: fixed;
  height: 100%;
  top: 0;
  width: 100%;
  z-index: 999;
}
.home_coupon_model{
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
}
.home_coupon_content{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300px;
  height: 360px;
  display: flex;
  justify-content: center;
}
.home_coupon_content_image{
  width: 100%;
  height: 100%;
}
.home_coupon_content_button{
  position: absolute;
  bottom: 20px;
  width: calc(100% - 60px);
  height: 49px;
  background: #1a1a1a;
  border: 3px solid #ffe329;
  border-radius: 49px;
  font-size: 18px;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffe329;
  left: 50%;
  transform: translateX(-50%);
}
.home_coupon_content_close{
  position: absolute;
  top: -48px;
  right: -24px;
  width: 48px;
  height: 48px;
}
