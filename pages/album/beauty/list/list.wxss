/* pages/album/beauty/list/list.wxss */
.bg{
    width: 100vw;
    min-height: 100vh;
    background-color: #FBFBFB;
}
.order-item{
    width: calc(100% - 40px);
    margin: 10px;
    background-color: #FFF;
    box-shadow: 0 0 5px #CAD9E8;
    display: flex;
    padding: 15px 10px;
    position: relative;
}
.order-item>image{
    width: 62px;
    height: 62px;
    border-radius: 5px;
    margin-right: 10px;
}
.order-item>view>view{
    line-height: 24px;
}
.order-item>view>view:nth-child(2){
    font-size: 12px;
    color: #999999;
}
.order-item>view>view:nth-child(3){
    font-size: 12px;
    color: #999999;
}
.score image{
    width: 14px;
    height: 14px;
    margin: 0 5px;
}
.score-btn{
    position: absolute;
    right: 10px;
    bottom: 12px;
    font-size: 13px;
    color: #3B0C0C;
    border: 1px solid #FFE74F;
    width: 60px;
    height: 24px;
    text-align: center;
    line-height: 60px;
    border-radius: 12px;
}