/* pages/album/upload/upload.wxss */
.banner{
    width: 100%;
}
.content{
    background-color: #FFF;
    border-radius: 15px 15px 0 0;
    position: relative;
    top: -15px;
    padding: 10px;
    display: flex;
    flex-flow: wrap;
    padding-bottom: 100px;
}
.content>view{
    padding: 6px;
    position: relative;
    width:calc(33% - 12px);
    height:calc(0.33 * 100vw - 12px);
}
.content image{
    width: 100%;
    height: 100%;
}
.delete-icon{
    position: absolute;
    right: 0;
    top: 0;
    padding: 6px;
}
.delete-icon image{
    width: 22px;
    height: 22px;
}
.protocol{
    display: flex;
    /* justify-content: center; */
    height: 25px;
    text-align: left;
    margin-left: 30rpx;
    /* align-items: center; */
    color: #222222;
    font-size: 13px;
}
.protocol .circle{
    width: 15px;
    height: 15px;
    text-align: center;
    line-height: 13px;
    border: 1rpx #ccc solid;
    border-radius: 50%;
    background-color: #FFF;
    margin-right: 5px;
}
.protocol .circle text{
    display: inline-block;
    background-color: #FFD800;
    border-radius: 50%;
    width: 9px;
    height: 9px;
}
.footer{
    position: fixed;
    width: 100%;
    bottom: 0;
    left: 0;
    background-color: #FFF;
    padding: 10px 0;
}
.footer .btn{
    background: linear-gradient(#FFE74F,#FFE227);
    width: 90%;
    height: 40px;
    text-align: center;
    line-height: 40px;
    border-radius: 20px;
    margin: 10px auto;
    color:#240101;
}
.footer .disable{
    background: linear-gradient(#E9E9E9,#E1E1E1) !important;
}