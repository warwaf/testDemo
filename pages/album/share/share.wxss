}
.content-empty{
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 1080;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #FFF;
    color: #240101;
    font-size: 16px;
    justify-content: space-around;
}
.content-empty view{
    text-align: center;
}
.content-empty image{
    margin: 30px 0;
    width: 106px;
    height: 106px;
    border-radius: 50%;
}
.fast-comment{
    overflow: hidden;
    height: 50px;
    line-height: 40px;
    display: flex;
    justify-content: left;
    align-items: center;
}
.fast-comment>view{
    color: #999;
    flex: left;
    padding: 0 10px;
}
.entrys{
    height: 50px;
    display: flex;
    align-items: center;
}
.entrys text{
    display: inline-block;
    height: 28px;
    line-height: 28px;
    max-width: 140px;
    min-width: 60px;
    padding: 0 5px;
    background-color: #F2F2F2;
    color: #222222;
    border-radius: 14px;
    margin: 0 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
