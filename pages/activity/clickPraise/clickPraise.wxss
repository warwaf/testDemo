/* pages/activity/clickPraise/clickPraise.wxss */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.clickPraise>image{
  width: 100%;
  height: 1624rpx;
  display: flex;
}
.clickPraise_bottom{
  height:110rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px -4rpx 8rpx 0px rgba(0,0,0,0.04);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 0 auto;
  position: fixed;
  bottom: 0;
}
.clickPraise_bottom>button:last-child{
  height:88rpx;
  background:rgba(255,226,40,1);
  border-radius:44rpx;
  font-size:32rpx;
  text-align: center;
  line-height: 88rpx;
  width:calc(50% - 45rpx);
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(36,1,1,1);
}
.clickPraise_bottom>button:last-child::after{
  border: none;
}
.clickPraise_bottom>button:first-child{
  height:88rpx;
  background:rgba(255,255,255,1);
  border-radius:44rpx;
  border:2rpx solid rgba(35,24,21,1);
  font-size:32rpx;
  text-align: center;
  line-height: 88rpx;
  width:calc(50% - 45rpx);
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(35,24,21,1);
  margin-right: 30rpx;
}
.clickPraise{
  position: relative;
}
.clickPraise_content{
  text-align: center;
  width: 100%;
  position: absolute;
  top: 700rpx;
  left: 50%;
  transform: translateX(-50%);
}
.clickPraise_content .content_title{
  font-size:54rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(35,24,21,1);
  line-height:75rpx;
}
.clickPraise_content .content_title1{
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(35,24,21,1);
  line-height:42rpx;
  margin-top: 10rpx;
}
.clickPraise_content .content_Show{
  width: calc(100% - 180rpx);
  height:120rpx;
  border-radius:16rpx;
  border:6rpx solid rgba(35,24,21,1);
  margin: 40rpx auto;
  line-height: 120rpx;
  border-right: 0;
  border-top-right-radius: none;
  border-top-left-radius: none;
  overflow: hidden;
  display: flex;
}
.clickPraise_content .content_Show>text:nth-child(1){
  display: inline-block;
  width: 40%;
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:600;
  color:rgba(35,24,21,1);
}
.clickPraise_content .content_Show>text:nth-child(2){
  display: inline-block;
  width: 60%;
  background:rgba(35,24,21,1);
  /* border-radius:0px 16rpx 16rpx 0px; */
  font-size:40rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,226,40,1);
}
.clickPraise_content .content_Show .totalNum{
  font-size:80rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,226,40,1);
  vertical-align: sub;
  margin-right: 10rpx;
}