page{
  height: 100%;
  background: rgb(247, 247, 247);
}
.detail_content .content_item{
  display: flex;
  padding: 0 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.detail_content{
  width: calc(100% - 48rpx);
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0px 4rpx 20rpx 0px rgba(51,51,51,0.1); 
  margin: 24rpx auto;
  padding-bottom: 60rpx;
}
.detail_content .content_item>view:nth-child(1){
  width: 156rpx;
  text-align: right;
  margin-right: 46rpx;
  font-size: 26rpx;
  font-family: PingFang, PingFang-SC;
  font-weight: SC;
  color: #231815;
  line-height: 36rpx;
}
.detail_content .content_item>view:nth-child(2){
  width: calc(100% - 216rpx);
  font-size: 26rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 36rpx;
}
.schedulingDetail_button{
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #ffffff;
  display: flex;
  height: 110rpx;
  box-shadow: 0px -4rpx 8rpx 0px rgba(0,0,0,0.04); 
  display: flex;
  justify-content: center;
  align-items: center;
}
