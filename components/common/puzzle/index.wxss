/* components/common/puzzle/index.wxss */
.hc-puzzle {
  display: inline-block;
  width:286px;
  height:380px;
  position: relative;
}
.hc-puzzle> canvas{
  width:100%;
  height:380px;
  position:absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}
.hc-puzzle .canvasHide{
  left: -800px;
}