/* components/loading/loading.wxss */

.spinner {
	position: fixed;
	top: calc(45vh - 40px);
	left: 0;
	width: 100vw;
	display: flex;
	flex-direction: column;
	align-items: center;
	z-index: 1001;
}

.spinner.top {
  top: calc(32vh - 40px);
}

.spinner-body {
  background: #fff;
  opacity: 0.95;
  border-radius: 20px;
  text-align: center;
  padding: 0 15px;
	display: flex;
	flex-flow: column nowrap;
	justify-content: center;
	align-items: center;
}

.text {
  text-align: center;
  font-size: 13px;
  padding: 15px 0;
}

.mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 1000;
}

.mask.show {
	background: rgba(0, 0, 0, 0.5);
}

