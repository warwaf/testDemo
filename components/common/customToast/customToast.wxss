/* components/common/customToast/customToast.wxss */
.c-toast {
  min-height: 98rpx;
  min-width: 50%;
  max-width: 80%;
  padding: 10rpx 48rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.c-toast .tip-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.c-toast .message {
  color: #FFF;
  font-size: 14px;
  width: 100%;
}

.animate {
  animation-name: toastAnimate;
  animation-duration: 2s;
  animation-timing-function: linear;
  animation-delay: 0;
  animation-iteration-count: 1;
}

@keyframes toastAnimate {
  10% {
    opacity: 1;
  }

  30% {
    opacity: 0.8;
  }

  50% {
    opacity: 0.5;
  }

  70% {
    opacity: 0.3;
  }

  100% {
    opacity: 0;
  }
}