/* components/navbar/index.wxss */

.navbar {
  width: 100%;
  overflow: hidden;
  position: relative;
  top: 0;
  left: 0;
  z-index: 10;
  flex-shrink: 0;
  background: #FFF;
}

.navbar-title {
  width: 100%;
  box-sizing: border-box;
  padding-left: 75px;
  padding-right: 100px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  position: absolute;
  left: 0;
  z-index: 10;
  color: #000;
  font-size: 17px;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.navbar-action-wrap {
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  position: absolute;
  left: 10px;
  z-index: 11;
  line-height: 1;
  padding-top: 4px;
  padding-bottom: 4px;
}

.navbar-action-group {
  overflow: hidden;
}

.navbar-action-item {
  color: #333;
  width: 24px;
  height: 24px;
}

.navbar-action-item .back {
  width: 100%;
  height: 100%;
}

.navbar-action-group .last {
  border-right: none;
}
