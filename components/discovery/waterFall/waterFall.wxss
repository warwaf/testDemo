/* components/waterFall/waterFall.wxss */
.water-fall-outer{
    padding: 10px;
    display: flex;
    justify-content: space-between;
}
.water-fall-item{
    width: 100%;
    position: relative;
}
.water-fall-item image{
    width: 100%;
    border-radius: 10px;
}
.water-fall-item .quantity{
    position: absolute;
    bottom: 40px;
    right: 5px;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    height: 20px;
    line-height: 20px;
    border-radius: 10px;
    font-size: 11px;
    padding: 0 10px;
}
.water-fall-item view{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 26px;
}
.water-fall-item view .avatar image{
    width: 21px;
    height: 21px;
    margin: 0 10px;
}
.water-fall-item view .avatar text{
    color: #222222;
    font-size: 11px;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    width: 80px;
}
.water-fall-item view .price image{
    width: 12px;
    height: 13px;
}
.water-fall-item view .price text{
    color: #999999;
    font-size: 11px;
    margin: 0 6px;
}
.water-fall-item .fire{
    min-width: 40px;
    height: 20px;
    background-color: rgba(0,0,0,.5);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 5px;
    bottom: 40px;
    color: #FFF;
    font-size: 13px;
    padding:  0 5px;
}
.water-fall-item .fire image{
    width: 10px;
    height: 13px;
    margin-right: 5px;
}

.v-tag{
    position: absolute;
    left: 0;
    top: 10px;
    background: #FFDD00;
    border-radius:0px 8px 8px 0px;
    font-size:11px;
    padding: 1px 8px;
    opacity: 0.9;
}