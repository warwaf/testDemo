.tool {
    position: fixed;
    z-index: 4;
    bottom: 10px;
    width: 50px;
    right: 0;
    /* transition: right 1s; */
}

.tool-class-visiable .tool-item{
    right: 12px;
}

.tool-class-hidden .tool-item{
    right: -50px;
}

.tool-item {
    position: relative;
    text-align: center;
    transition-property: right;
    transition-timing-function: ease-out;
    transition-duration: 0.4s;
}

.tool-item:nth-child(1){
    transition-delay: 0.1s;
}
.tool-item:nth-child(2){
    transition-delay: 0.2s;
}
.tool-item:nth-child(3){
    transition-delay: 0.3s;
}
.tool-item:nth-child(4){
    transition-delay: 0.4s;
}
.tool-item:nth-child(5){
    transition-delay: 0.5s;
}
.tool-item:nth-child(6){
    transition-delay: 0.6s;
}
.tool-item:nth-child(7){
    transition-delay: 0.7s;
}
.tool-item:nth-child(8){
    transition-delay: 0.8s;
}
.tool-item:nth-child(9){
    transition-delay: 0.9s;
}
.tool-item:nth-child(10){
    transition-delay: 1s;
}
.tool-item:nth-child(11){
    transition-delay: 1.1s;
}
.tool-item:nth-child(12){
    transition-delay: 1.2s;
}
.tool-item:nth-child(13){
    transition-delay: 1.3s;
}
.tool-item:nth-child(14){
    transition-delay: 1.4s;
}
.tool-item:nth-child(15){
    transition-delay: 1.5s;
}


.tool-guidance .tool-item:after {
    content: '';
    width: 42px;
    height: 42px;
    position: absolute;
    top: 7px;
    left: 7px;
    background-color: rgba(0, 0, 0, .5);
    border-radius: 50%;
}

.tool-item .img {
    width: 56px;
    height: 56px;
}

.tool-item.senior {
    width: 77px;
    height: 93px;
}

.senior .img {
    width: 100%;
    height: 100%;
    position: absolute;
    right: 10px;
}

.upload {
    position: fixed;
    left: 50%;
    transform: translateX(-43px);
    bottom: 0px;
}

.upload .img {
    width: 86px;
    height: 86px;
}

.upload-mask:after {
    content: '';
    width: 60px;
    height: 60px;
    position: absolute;
    top: 13px;
    left: 13px;
    background-color: rgba(0, 0, 0, .5);
    border-radius: 50%;
}

.select-box {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #fff;
    padding: 10px 20px 30px 10px;
    z-index: 5;
}

.select-box .body {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 20px 0;
}

.select-box .img {
    width: 106px;
    height: 106px;
}

.select-box .text {
    text-align: center;
}

.layout {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    background-color: rgba(0, 0, 0, .15);
}

.tool-guidance .light-icon:after {
    background-color: transparent !important;
}
.contact{
    background: none;
    padding: 0;
    height: 56px;
}
.contact::after{
    border: none;
}