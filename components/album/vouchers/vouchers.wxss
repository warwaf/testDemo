@keyframes wobble {
  0% {
    transform: rotateY(0deg) rotateX(0deg) rotateZ(0deg) translateZ(0px);
  }
  25% {
    transform: rotateY(90deg) rotateX(0deg) rotateZ(0deg) translateZ(0px);
  }
  50% {
    transform: rotateY(180deg) rotateX(0deg) rotateZ(0deg) translateZ(0px);
  }
  75% {
    transform: rotateY(90deg) rotateX(0deg) rotateZ(0deg) translateZ(0px);
  }
  100% {
    transform: rotateY(0deg) rotateX(0deg) rotateZ(0deg) translateZ(0px);
  }
}


@keyframes boom-1 {
  0% {
    width: 100rpx;
    height: 100rpx;
    transform: translateX(-45px) translateY(0);
    opacity: 1;
  }
  100% {
    width: 60rpx;
    height: 60rpx;
    transform: translateX(-180rpx) translateY(-100rpx);
    opacity: 0;
  }
}

@keyframes boom-2 {
  0% {
    width: 80rpx;
    height: 80rpx;
    transform: translateX(90rpx) translateY(0);
    opacity: 1;
  }
  100% {
    width: 60rpx;
    height: 60rpx;
    transform: translateX(200rpx) translateY(-100rpx);
    opacity: 0;
  }
}

@keyframes boom-3 {
