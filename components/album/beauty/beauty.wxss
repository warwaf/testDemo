/* components/album/beauty/beauty.wxss */
.water-fall-outer{
    display: flex;
    justify-content: space-around;
    margin: 15px 12px;
}

.water-fall-column{
    width: calc(50% - 12px);
}

.water-fall-item{
    width: 100%;
    margin-top: 5px;
    position: relative;
}

.water-fall-item .img{
    width: 100%;
    border-radius: 4px;
}

.water-fall-item .sign{
    position: absolute;
    top: 10px;
    left: -3px;
}
.water-fall-item .sign .img{
    width: 51px;
    height: 31px;
}
.praise{
    width: 32px;
    height: 16px;
    background-color: rgba(0,0,0,.5);
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 11px;
    position: absolute;
    bottom: 10px;
    right: 6px;
    border-radius: 8px;
    padding: 0 4px;
    color: #FFF;
}
.praise .img{
    width: 10px;
    height: 11px;
}
.new {
    position: absolute;
    right: 5px;
    top: 5px;
}
.new .img{
    width: 35px;
    height: 30px;
}