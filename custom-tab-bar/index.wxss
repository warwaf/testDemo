.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
}
.btn{
  color: #fff;
  display: flex;
  flex-direction: column;
  background-color: transparent;
  height: 56px;
  align-items: center;
  padding: 0 20px;
  border:none;
  margin-top: 15px;
}
.btn::after {
  border:none;
}

.tab-bar-item .img {
   width: 27px!important;
    height: 27px!important;
}

.animate{
    animation-name: tab-animate;
    animation-duration:0.5s;
    animation-timing-function: linear; 
    animation-delay: 0;
    animation-iteration-count: 1; 
}

.tab-bar-item .view {
  font-size: 10px;
  height:15px;
  line-height:15px;
}

@keyframes tab-animate {
    10%{
        transform: scale(1)
    }

    50%{
        transform: scale(1.3);
    }

    100%{
        transform: scale(1);
    }
}


